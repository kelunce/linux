export  PS1='\[\033[38;5;11m\][$(ip a | grep inet | grep brd | cut -d " " -f 6 | cut -d "/" -f 1)@$(pwd)]\n\[\e[m\]\[\033[38;5;2m\]$\[\e[m\]'
